<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 기본 네트워크 권한 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- BLE 권한 -->
    <uses-permission
        android:name="android.permission.BLUETOOTH"
        android:maxSdkVersion="30" /> <!-- Android 12 이하용 -->
    <uses-permission
        android:name="android.permission.BLUETOOTH_ADMIN"
        android:maxSdkVersion="30" /> <!-- Android 12 이하용 -->
    <uses-permission android:name="android.permission.BLUETOOTH_SCAN" /> <!-- Android 12 이상용 -->
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" /> <!-- Android 12 이상용 -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" /> <!-- BLE 스캔 시 필요 -->

    <!-- BLE 하드웨어 요구 -->
    <uses-feature
        android:name="android.hardware.bluetooth"
        android:required="true" /> <!-- BLE 필수 -->
    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true" /> <!-- BLE LE 필수 -->

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/app_icon249"
        android:label="@string/app_name"
        android:roundIcon="@drawable/app_icon249"
        android:supportsRtl="true"
        android:theme="@style/Theme.SmartRing">

        <!-- MainActivity 설정 -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.SmartRing">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
